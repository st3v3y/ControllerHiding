@using System.Globalization
@using ControllerHiding.Models
@model dynamic


@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home</h2>

Home, sweet home!


@{
    object myModel;
    if (ViewData.TryGetValue("MyModel", out myModel))
    {
        TempData["MyModel"] = myModel;
    }

    if (!ViewData.ModelState.IsValid)
    {
        TempData["ModelState"] = ViewData.ModelState;
    }
}


@Html.Action("Index", "HiddenForm")

